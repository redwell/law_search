# データベース設定
DATABASE_URL=arangodb://root:password@localhost:8529
ARANGO_ROOT_PASSWORD=password

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# 埋め込みモデル設定
EMBEDDING_MODEL=jinaai/jina-embeddings-v3
EMBEDDING_DIMENSION=1024

# アプリケーション設定
ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# サーバー設定
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Redis設定（キャッシュ用）
REDIS_URL=redis://localhost:6379/0

# e-Govデータ設定
EGOV_BASE_URL=https://elaws.e-gov.go.jp
EGOV_DATA_DIR=./data/egov
EGOV_UPDATE_INTERVAL=86400  # 24時間（秒）

# 検索設定
SEARCH_LIMIT=10
SEARCH_TIMEOUT=30
HYBRID_SEARCH_WEIGHTS='{"fulltext": 0.4, "vector": 0.4, "graph": 0.2}'

# セキュリティ設定
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
RATE_LIMIT_PER_MINUTE=60
MAX_QUERY_LENGTH=500

# 監視設定
ENABLE_METRICS=true
METRICS_PORT=9090
